modules = ["php", "postgresql-16", "php-8.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mysql80"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MySQL Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "MySQL Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf /tmp/mysql_data 2>/dev/null; mkdir -p /tmp/mysql_data && mysqld --initialize-insecure --datadir=/tmp/mysql_data --user=$(whoami) --log-error=/tmp/mysql_init.log 2>/dev/null; mysqld --datadir=/tmp/mysql_data --socket=/tmp/mysql.sock --port=8000 --pid-file=/tmp/mysql.pid --user=$(whoami) --bind-address=0.0.0.0"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 33060
externalPort = 3000
